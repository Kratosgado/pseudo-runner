{
  "name": "pseudo-runner",
  "displayName": "pseudo runner",
  "description": "Pseudocode langugage support, intellisense and syntax higlighting",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kratosgado/pseudo-runner"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "keywords": [
    "pseudo",
    "code",
    "runner",
    "intellisense",
    "syntax",
    "highlighting",
    "multi-root ready"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Debuggers",
    "Education",
    "Other",
    "Formatters"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "pseudo-runner.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "pseudo",
        "extensions": [
          ".ps",
          ".pseudo"
        ],
        "aliases": [
          "pseudocode",
          "pseudo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pseudo Runner",
      "properties": {
        "pseudoRunner.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "scope": "resource",
          "description": "Maximum number of problems to show in the Problems panel."
        },
        "pseudoRunner.enable": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "Enable/disable this extension."
        },
        "pseudoRunner.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the pseudo language server."
        }
      }
    },
    "grammars": [
      {
        "language": "pseudo",
        "scopeName": "text.ps",
        "path": "./syntaxes/pseudo.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && pnpm i && cd ../server && pnpm i && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
