{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pseudocode",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#expression"},
		{"include": "#functions"},
		{"include": "#numbers"},
		{"include": "#strings"},
		{"include": "#variables"},
		{"include": "#comments"}

	],
	"repository": {
		"functions":{
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\()"
				},
				{
					"name": "variable.parameter",
					"match": "(?<=\\()[^\\)]+(?=\\))"
				}
			]
		},
		"numbers": {
    "name": "constant.numeric",
    "match": "\\b\\d+\\b"
},
		"variables": {
			"patterns": [
				{
					"name": "variable",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
				"name": "keyword.control",
				"match": "\\b(if|IF|while|WHILE|return|RETURN|for|FOR|TO|to|DO|do|STEP|step|endif|ENDIF|endfor|ENDFOR|endwhile|ENDWHILE)\\b"
				},
				{
					"name": "entity.name.function",
					"match": "\\b(PRINT|OUTPUT|DISPLAY|GET|RECEIVE|INPUT|print|output|display|get|receive|input)\\b"
				},
				{
					"name": "entity.name.tag",
					"match": "\\b(FUNCTION|ENDFUNCTION|TRUE|FALSE|function|endfunction|true|false)\\b"
				},
				{
					"name": "keyword.operator.new",
					"match": "(<|>|<=|>=|=|==)"
				}
		]
		},
		"strings": {
			"name": "string.quoted.double.pseudo",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pseudo",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "text.ps"
}