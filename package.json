{
  "name": "pseudo-runner",
  "displayName": "pseudo runner",
  "description": "Pseudocode langugage support, intellisense and syntax higlighting",
  "version": "1.3.0",
  "publisher": "KratosGado",
  "icon": "images/icon.png",
  "author": {
    "name": "Prince Mbeah Essilfie",
    "email": "mbeahessilfieprince@gmail.com",
    "url": "https://github.com/Kratosgado"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kratosgado/pseudo-runner"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "keywords": [
    "pseudo",
    "code",
    "runner",
    "intellisense",
    "syntax",
    "highlighting",
    "multi-root ready"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Debuggers",
    "Education",
    "Other",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./dist/extension",
  "contributes": {
    "keybindings": {
      "command": "pseudoRunner.runPseudo",
      "title": "run pseudo code",
      "key": "f5",
      "when": "editorTextFocus && !editorReadonly || editorLangId == pseudo"
    },
    "commands": [
      {
        "command": "pseudoRunner.runPseudo",
        "title": "run pseudo code",
        "category": "run/execute",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == pseudo",
          "command": "pseudoRunner.runPseudo",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "editorLangId == pseudo",
          "command": "pseudoRunner.runPseudo",
          "group": "navigation"
        }
      ]
    },
    "debuggers": [
      {
        "type": "pseudo",
        "label": "Pseudo",
        "program": "./dist/server",
        "runtime": "executable"
      }
    ],
    "languages": [
      {
        "id": "pseudo",
        "extensions": [
          ".ps",
          ".pseudo"
        ],
        "aliases": [
          "pseudocode",
          "pseudo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pseudo Runner",
      "properties": {
        "pseudoRunner.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "scope": "resource",
          "description": "Maximum number of problems to show in the Problems panel."
        },
        "pseudoRunner.enable": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "Enable/disable this extension."
        },
        "pseudoRunner.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the pseudo language server."
        }
      }
    },
    "grammars": [
      {
        "language": "pseudo",
        "scopeName": "text.ps",
        "path": "./syntaxes/pseudo.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run build-server && webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "npm run build-lang && npm run build-server",
    "build-server": "tsc -b",
    "build-lang": "cd ../../rust/pseudo_interpreter && cargo build --release  && cp -r target/release/pseudo_interpreter.exe ../../typescript/pseudo-runner/dist/pseudo_interpreter && cd ../../typescript/pseudo-runner"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "~18.19.25",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  }
}
